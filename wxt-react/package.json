    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3",
    "wxt": "^0.20.6"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "build/",
      "node_modules/",
      "dist/",
      ".output/"
